<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row mt-3">
        <h1 class="col-8 offset-2  ">Login to wonderlust!</h1>
        <div class="col-8 offset-2 ">
            <form action="/login" method="POST"  novalidate class="needs-validation">
                <br>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input 
                        name="username" 
                        id = username
                        type="text" 
                        class="form-control"
                        required
                    />
                </div><br>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input 
                        name="password" 
                        id = "password"
                        type="password" 
                        class="form-control"
                        required
                    />
                    <!-- <div class="invalid-feedback"></div> -->
                    <!-- <div class="valid-feedback">looks good!</div> -->
                </div><br>  
                <button class="btn btn-success " >Login</button><br>   
            </form>
        </div>
    </div>

</body>
